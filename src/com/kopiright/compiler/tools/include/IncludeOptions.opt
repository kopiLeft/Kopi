prefix Include

parent com.kopiright.util.base.Options

usage		"usage: com.kopiright.compiler.tools.include.Main [option]* [--help] <input-file>"

package com.kopiright.compiler.tools.include

longname		"output"
	shortcut	"o"
	type		String
	default		"null"
	requireArgument
	help		"The name of the output file"

longname		"pattern"
	shortcut	"p"
	type		String
	default		"%%include"
	requireArgument
	help		"The pattern preceding the file name to include"

longname		"directory"
	shortcut	"d"
	type		String
	default		"."
	requireArgument
	help		"The directory to search for include files"
