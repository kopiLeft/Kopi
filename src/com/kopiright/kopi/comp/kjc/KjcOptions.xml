<option prefix="Kjc" parent="com.kopiright.util.base.Options"  package="com.kopiright.kopi.comp.kjc"  usage="usage: com.kopiright.kopi.comp.kjc.Main [option]* [--help] &lt;java-files>">

  <param longname="beautify" shortname="b" type="boolean" default="false" help="Beautifies the source code"/>
 
  <param longname="verbose" shortname="v" type="boolean" default="false"  help="Prints out information during compilation"/>
 
  <param longname="java" shortname="j" type="boolean" default="false"  help="Generates java source code instead of class"/> 

  <param longname="encoding" shortname="e" type="String" default="null" help="Sets the character encoding for the source file(s)."/>
  
  <param longname="nowrite" shortname="n" type="boolean" default="false"  help="Only checks files, doesn't generate code"/>

  <param longname="warning" shortname="w" type="int" default="1" optionalDefault="2"  help="Maximal level of warnings to be displayed"/>
  
  <param longname="nowarn" shortname="*" type="boolean" default="false"  help="Not used, for compatibility purpose"/>
  
  <param longname="optimize" shortname="O" type="int" default="1" optionalDefault="2"  help="Optimizes X times"/>
  
  <param longname="deprecation" shortname="D" type="boolean" default="false"  help="Tests for deprecated members"/>
   
  <param longname="extdirs" shortname="t" type="String" default="null"  help="Define location of installed extensions"/>
  
  <param longname="destination" shortname="d" type="String" default="null"  help="Writes files to destination"/>
  
  <param longname="classpath" shortname="C" type="String" default="null"  help="Changes class path to classpath"/>
  
  <param longname="debug" shortname="g" type="boolean" default="false"  help="Produces debug information (does nothing yet)"/>

  <param longname="source" shortname="s" type="String" default="1.2"  help="Sets the source language (1.1, 1.2, 1.3, 1.4)"/>
  
  <param longname="assertion" shortname="A" type="String" default="none"  help="Enables assert extension to Java (none, simple, all)"/>
    
  <param longname="filter" shortname="f" type="String" default="com.kopiright.kopi.comp.kjc.DefaultFilter"  help="Warning filter"/>

</option>
