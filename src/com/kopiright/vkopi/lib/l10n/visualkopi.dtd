<!ELEMENT root (form | report | insert | blockinsert)>

<!ELEMENT form ((type | menu | actor)*, page*, block*)>
<!ATTLIST form
	title		CDATA	#IMPLIED
>

<!ELEMENT report ((type | menu | actor)*, field*)>
<!ATTLIST report
	title		CDATA	#IMPLIED
>

<!ELEMENT insert ((type | menu | actor)*)>

<!ELEMENT blockinsert ((type | menu | actor)*, block)>

<!ELEMENT type (code | list)?>
<!ATTLIST type
	ident		CDATA	#REQUIRED
>

<!ELEMENT code (codedesc*)>

<!ELEMENT codedesc EMPTY>
<!ATTLIST codedesc
	ident		CDATA	#REQUIRED
	label		CDATA	#REQUIRED
>

<!ELEMENT list (listdesc*)>

<!ELEMENT listdesc EMPTY>
<!ATTLIST listdesc
	column		CDATA	#REQUIRED
	title		CDATA	#REQUIRED
>

<!ELEMENT menu EMPTY>
<!ATTLIST menu
	ident		CDATA	#REQUIRED
	label		CDATA	#REQUIRED
>


<!ELEMENT actor EMPTY>
<!ATTLIST actor
	ident		CDATA	#REQUIRED
	label		CDATA	#REQUIRED
	help		CDATA	#IMPLIED
>

<!ELEMENT page EMPTY>
<!ATTLIST page
	ident		CDATA	#REQUIRED
	title		CDATA	#IMPLIED
>

<!ELEMENT block (index*, field*)>
<!ATTLIST block
	name		CDATA	#REQUIRED
	title		CDATA	#IMPLIED
	help		CDATA	#IMPLIED
>

<!ELEMENT index EMPTY>
<!ATTLIST index
	ident		CDATA	#REQUIRED
	message		CDATA	#REQUIRED
>

<!ELEMENT field EMPTY>
<!ATTLIST field
	ident		CDATA	#REQUIRED
	label		CDATA	#IMPLIED
	help		CDATA	#IMPLIED
>


