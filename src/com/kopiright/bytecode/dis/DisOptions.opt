prefix Dis

parent com.kopiright.util.base.Options

usage		"usage: com.kopiright.bytecode.dis.Main [option]* [--help] <class-files, class-names>"

package com.kopiright.bytecode.dis

longname		"stack"
	shortcut	"x"
	type		boolean
	default		"false"
	help		"Prints stack information"

longname		"sorted"
	shortcut	"s"
	type		boolean
	default		"false"
	help		"Prints fields and methods sorted"

longname		"stdout"
	shortcut	"c"
	type		boolean
	default		"false"
	help		"Prints on the standard output"

longname		"destination"
	shortcut	"d"
	type		String
	default		"null"
	requireArgument
	help		"Sets the destination directory"

longname		"verbose"
	shortcut	"v"
	type		boolean
	default		"false"
	help		"Displays information while processing files"

longname		"inter"
	shortcut	"i"
	type		boolean
	default		"false"
	help		"Only displays the interfaces of classes"

longname		"extdirs"
	shortcut	"t"
	type		String
	default		"null"
	requireArgument
	help		"Define location of installed extensions"

longname		"classpath"
	shortcut	"p"
	type		String
	default		"null"
	requireArgument
	help		"Sets the classpath"
