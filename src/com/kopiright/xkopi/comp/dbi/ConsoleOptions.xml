<option prefix="Console"
        parent="com.kopiright.util.base.Options"
        package="com.kopiright.xkopi.comp.dbi"
        usage="usage: com.kopiright.xkopi.comp.dbi.Connection [options]* [--help] --datasource &lt;datasrc> --host &lt;host> --dbname &lt;dbname> [--schema &lt;schema>] --login &lt;login> --password &lt;password> [&lt;dbi-files>]">
  <param longname="datasource"
         shortname="d"
         type="String"
         default="tbx"
         help="Sets the source to connect to (sap | tbx | pg | ora | ora10g | mysql | ingres | as400)" />
  <param longname="host"
         shortname="H"
         type="String"
         default="localhost"
         help="The host to connect to" />
  <param longname="port"
         shortname="P"
         type="String" 
         default="null"
         help="The port number of the database server" />
  <param longname="dbname"
         shortname="b"
         type="String"
	 default="null"
	 help="The name of the database" />
  <param longname="schema"
         shortname="s"
         type="String"
	 default="null"
	 help="The name of the database schema" />
  <param longname="login"
	 shortname="l"
	 type="String"
	 default="null"
	 help="The login for the database" />
  <param longname="password"
	 shortname="p"
	 type="String"
	 default="null"
	 help="The password for the database" />
  <param longname="noprompt"
	 shortname="N"
	 type="boolean"
	 default="false"
	 help="No console prompt" />
  <param longname="abortonerror"
	 shortname="A"
	 type="boolean"
	 default="false"
	 help="Abort the transaction and exit on error" />
  <param longname="trace"
	 shortname="t"
	 type="boolean"
	 default="false"
	 help="print sql trace." />
</option>
