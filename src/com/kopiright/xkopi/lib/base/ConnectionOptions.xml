<param longname="database" shortname="b"  type="String"  default="null"  help="The URL of the database" />
<param longname="driver" shortname="d"  type="String"  default="null"  help="The JDBC driver to use to access the database" />
<param longname="username" shortname="u"  type="String"  default="null"  help="The username for the database" />
<param longname="password" shortname="p"  type="String"  default="null"  help="The password for the database" />
