prefix Connection

parent at.dms.util.base.Options

usage		"usage: Main [option]*"

package at.dms.xkopi.lib.base

longname		"database"
	shortcut	"b"
	type		String
	default		"null"
	requireArgument
	help		"The URL of the database"

longname		"driver"
	shortcut	"d"
	type		String
	default		"at.dms.kconnect.Driver"
	requireArgument
	help		"The JDBC driver to use to access the database"

longname		"username"
	shortcut	"u"
	type		String
	default		"null"
	requireArgument
	help		"The username for the database"

longname		"password"
	shortcut	"p"
	type		String
	default		"null"
	requireArgument
	help		"The password for the database"

longname		"trace"
	shortcut	"t"
	type		int
	default		"0"
	optionalDefault "1"
	help		"Set the trace level to print database queries before execution (0: none, 1: all but FETCH, 2: all)"
