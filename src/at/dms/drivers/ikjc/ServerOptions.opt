prefix Server

parent at.dms.util.base.Options

usage		"usage: at.dms.drivers.ikjc.Server [option]* <files>"

package at.dms.drivers.ikjc

longname		"port"
	shortcut	"p"
	type		int
	default		"4444"
	requireArgument
	help		"the port number for incoming connections"

longname		"verbose"
	shortcut	"v"
	type		boolean
	default		"false"
	help		"Prints out information about connections"
