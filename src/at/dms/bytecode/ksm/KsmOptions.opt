prefix Ksm

parent at.dms.util.base.Options

usage		"usage: at.dms.bytecode.ksm.Main [option]* [--help] <ksm-files>"

package at.dms.bytecode.ksm

longname		"destination"
	shortcut	"d"
	type		String
	default		"null"
	requireArgument
	help		"Sets the destination directory"

longname		"optimize"
	shortcut	"O"
	type		int
	default		"0"
	optionalDefault	"1"
  //	enum		"0", "1", "2", "3"
	help		"Optimizes X times"

longname		"verbose"
	shortcut	"v"
	type		boolean
	default		"false"
	help		"Displays information while processing files"
