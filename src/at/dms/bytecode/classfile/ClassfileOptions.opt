prefix Classfile

parent at.dms.util.base.Options

usage		"usage: at.dms.bytecode.classfile.Main [option]* [--help] <class-files, zip-file, directory>"

package at.dms.bytecode.classfile

longname		"inter"
	shortcut	"i"
	type		boolean
	default		"false"
	help		"Reads interface only"

longname		"destination"
	shortcut	"d"
	type		String
	default		"null"
	requireArgument
	help		"Selects the destination directory"

longname		"repeat"
	shortcut	"R"
	type		int
	default		"1"
	requireArgument
	help		"Repeats R times the read/write process"
