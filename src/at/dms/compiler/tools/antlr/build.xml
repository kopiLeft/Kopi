<?xml version="1.0" ?>
<!--==================================================================
    package: at.dms.compiler.antlr
    ==================================================================-->
<project default="build" basedir=".">

  <property name="topdir" value="../../.." />
  <property name="node" value="yes"/>

  <!--==============================================================
      Default target: builds messages, options and java sources 
      ==============================================================-->
  <target name="node.build" description="  Runs subbuild files ">
    <ant dir="runtime"  inheritAll="false" target="${target}" />
  	<ant dir="compiler" inheritAll="false" target="${target}" />
  	<ant dir="extra"    inheritAll="false" target="${target}" />
  </target>

  <!--==============================================================
      buildtools target:  builds java sources only
      ==============================================================-->
  <target name="buildtools" description="  Runs subbuild files ">
    <ant dir="runtime"  inheritAll="false" />
  	<ant dir="compiler" inheritAll="false" target="buildtools" />
  	<ant dir="extra"    inheritAll="false" />
  </target>

  <import file="${topdir}/defs.xml" />

</project>
